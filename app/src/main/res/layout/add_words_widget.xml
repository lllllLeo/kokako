<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="@dimen/widget_margin"
    android:orientation="vertical"
    >
<!--    android:theme="@style/ThemeOverlay.Kokako.AppWidgetContainer"-->

    <TextView
        android:id="@+id/appwidget_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="단어"
        android:textColor="@color/colorBlack"
        android:textSize="35sp"
        />
    <TextView
        android:id="@+id/appwidget_mean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="뜻"
        android:textColor="@color/colorBlack"
        android:textSize="35sp"
        android:visibility="gone"
        />
    <!--        <LinearLayout
                android:id="@+id/input_division"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivision"
                android:orientation="horizontal"
                />-->
<!--    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/colorDivision"/>-->
    <LinearLayout
        android:id="@+id/bsd_btn_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="bottom"
        android:weightSum="1">
        <ImageButton
            android:id="@+id/bsd_btn_move_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:theme="@style/ButtonTheme"
            android:backgroundTint="@color/colorWhite"
            android:stateListAnimator="@null"
            android:imeOptions="actionPrevious"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>
        <!--<View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/colorDivision"/>-->
        <ImageButton
            android:id="@+id/bsd_btn_move_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:theme="@style/ButtonTheme"
            android:backgroundTint="@color/colorWhite"
            android:stateListAnimator="@null"
            android:imeOptions="actionNext"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
    </LinearLayout>
</LinearLayout>