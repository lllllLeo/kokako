<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">
        <LinearLayout
            android:id="@+id/my_word_book_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_colors"
            android:gravity="center_vertical"
            android:layout_weight="0.9"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/my_word_main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N1 단어"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/my_word_gauge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ㅁㅁㅁㅁㅁㅁ" />

                    <TextView
                        android:id="@+id/my_word_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="78%"
                        android:layout_marginStart="10dp" />
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/my_word_main_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="150단어" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            >
            <!--
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            -->

                <Button
                    android:id="@+id/my_word_btn_options"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:background="@drawable/ic_baseline_more_vert_12" />

                <!--<TextView
                    android:id="@+id/my_word_text_view_options"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="&#8942;"
                    android:textAppearance="?android:textAppearanceLarge"
                    />-->
            </LinearLayout>

    </LinearLayout>


</FrameLayout>


