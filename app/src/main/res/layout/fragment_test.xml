<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <!--    android:background="@color/colorPrimaryLight"-->

    <!--    <include-->
    <!--        android:id="@+id/include_toolbar"-->
    <!--        layout="@layout/activity_toolbar"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="50dp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        >
        <ImageView
            android:id="@+id/test_back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
        </View>
        <LinearLayout
            android:id="@+id/test_listen_layout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/test_listen_imageview"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorButtonGray"
                android:background="@drawable/ic_baseline_volume_up_24"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/not_matched_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:visibility="gone"
            >
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.5"
            >
            <TextView
                android:id="@+id/count_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="1/20"
                android:textColor="@color/colorBlack"
                />
            <TextView
                android:id="@+id/question_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                android:layout_marginHorizontal="20dp"
                android:text="Question"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/answer_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.5">
            <TextView
                android:id="@+id/answer_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                android:textSize="30sp"
                android:layout_marginHorizontal="20dp"
                android:text="answer"
                android:textStyle="bold"
                android:visibility="invisible"
                android:textColor="@color/colorBlack"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:weightSum="1"
        >

        <ImageButton
            android:id="@+id/btn_previous"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:background="#00ff0000"
            android:stateListAnimator="@null"
            android:src="@drawable/ic_baseline_replay_24"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/colorDivision"/>
        <Button
            android:id="@+id/btn_false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="못외움"
            android:textColor="@color/colorRed"
            android:background="#00ff0000"
            android:stateListAnimator="@null"
            android:drawableTint="@color/colorRed"
            android:backgroundTint="@color/colorWhite"
            />
            <!--android:paddingRight="23dp"
            android:paddingLeft="23dp"
            android:drawableEnd="@drawable/ic_baseline_cancel_24"
            android:drawableRight="@drawable/ic_baseline_cancel_24"-->
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/colorDivision"/>
        <Button
            android:id="@+id/btn_true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:stateListAnimator="@null"
            android:text="외움"
            android:textColor="@color/colorBlue"
            android:background="#00ff0000"
            android:backgroundTint="@color/colorWhite"
            />
            <!--android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/ic_baseline_check_circle_24"
            android:drawableEnd="@drawable/ic_baseline_check_circle_24"-->
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/colorDivision"/>
        <ImageView
            android:id="@+id/btn_favorite"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/favorite_pressed_background"
            />
    </LinearLayout>
</LinearLayout>