<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/swipe_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/layout_background">
                <EditText
                    android:id="@+id/rv_word"
                    android:nextFocusDown="@+id/rv_mean"
                    android:nextFocusUp="@+id/rv_mean"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:hint="  Word"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:privateImeOptions="defaultInputMode=english" />

                <EditText
                    android:id="@+id/rv_mean"
                    android:nextFocusDown="@+id/rv_word"
                    android:nextFocusUp="@+id/rv_word"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:hint="  뜻"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:privateImeOptions="defaultInputMode=korean" />

                <Button
                    android:id="@+id/rv_remove_word"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_remove_circle_outline_24" />
                <!-- 삭제하시겠습니까 dialog 넣을까-->
        </LinearLayout>
</FrameLayout>



